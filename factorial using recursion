#include <stdio.h>
int factorial (int n)
{
    if(n==0||n==1)
    return 1;
    else
    return n* factorial(n-1);
}
int main()
{
    int number;
    printf("enter a positive integer:");
    scanf("%d",&number);
    if(number<0)
    printf("factoriaal is not defined for negative number.");
    else
    printf("factorialof %d is %d\n",number,factorial(number));
    return 0;
}
out put:
enter a positive integer:5
factorialof 5 is 120


